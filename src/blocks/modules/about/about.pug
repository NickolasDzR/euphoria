mixin about(value = false)
    +b.about
        .container
            .row
                +e.wrp
                    +e.H2.heading !{value.heading}
                    +e.P.text !{value.text}
                +e.items
                    each val, i in value.items
                        if !value.reverse
                            +e.item
                                +e.P.title #{val.title}
                                +e.content
                                    +e.IMG.img(src="img/content/" + val.img + ".png" srcset="img/content/" + val.img + "@x2.png 2x")
                                    +e.UL.list
                                        each item, k in val.listItems
                                            +e.LI.list-item
                                                +e.P.list-text #{item}
