mixin title(value = false)
    +b.title
        .container.h-full
            .row.h-full.items-center.justify-center
                +e.wrp
                    +e.content
                        +e.H1.heading(data-title) !{value.heading}
                        +e.P.subheading(data-title) #{value.subheading}
                        +e.P.text(data-title) #{value.text}
                        +e.button-wrp(data-title)
                            +btn({
                                text: "download",
                                mod: "purple",
                                mod: "purple",
                                elem: "button"
                            })
                            +btn({
                                text: "whitelist",
                                elem: "button"
                            })
                    +e.img-wrp
                        +e.IMG.img(src="img/content/logo-big.png" srcset="img/content/logo-big@x2.png x2" )
